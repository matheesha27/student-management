<?xml version="1.0" encoding="UTF-8"?>
<configuration>


    <property name="LOGS_HOME" value="logs/" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
            </Pattern>
        </layout>
    </appender>

  
    <appender name="FILE-COMMON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS_HOME}common.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss};%msg%n
            </Pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${LOGS_HOME}common.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>
    
   
    <logger name="common-log" level="info" additivity="false">
        <appender-ref ref="FILE-COMMON" level="info" />
        <appender-ref ref="STDOUT"  level="error"  />
    </logger>
    
    <include resource="org/springframework/boot/logging/logback/base.xml"/>  
    <logger name="org.springframework.web" level="INFO" >
        <appender-ref ref="FILE-COMMON" />
    </logger>
    <root level="error">
        <appender-ref ref="FILE" />
        <appender-ref ref="FILE-COMMON" />
        <appender-ref ref="STDOUT" />
    </root>
    
</configuration>